# RUN: sh -e @file

mkdir -p "$TEMPDIR/endpoints"
cd "$TEMPDIR"

cat << EOF > ./endpoints/end.js
export default async function chisel(req) {
    return new Response("");
}
EOF

cat << EOF > ./endpoints/endpoint.js
export default async function chisel(req) {
    return new Response("");
}
EOF

cat << EOF > ./endpoints/endpo.js
export default async function chisel(req) {
    return new Response("");
}
EOF

$CHISEL apply
# CHECK: End point defined: /end
# CHECK: End point defined: /endpo
# CHECK: End point defined: /endpoint

$CURL -o - $CHISELD_HOST/end
# CHECK: HTTP/1.1 200 OK
$CURL -o - $CHISELD_HOST/endpo
# CHECK: HTTP/1.1 200 OK
$CURL -o - $CHISELD_HOST/endpoint
# CHECK: HTTP/1.1 200 OK

rm ./endpoints/end.js

$CHISEL apply

$CURL -o - $CHISELD_HOST/end
# CHECK: HTTP/1.1 404 Not Found
$CURL -o - $CHISELD_HOST/endpo
# CHECK: HTTP/1.1 200 OK
$CURL -o - $CHISELD_HOST/endpoint
# CHECK: HTTP/1.1 200 OK

rm ./endpoints/endpoint.js

$CHISEL apply

$CURL -o - $CHISELD_HOST/end
# CHECK: HTTP/1.1 404 Not Found
$CURL -o - $CHISELD_HOST/endpoint
# CHECK: HTTP/1.1 404 Not Found
$CURL -o - $CHISELD_HOST/endpo
# CHECK: HTTP/1.1 200 OK

