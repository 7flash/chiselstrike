# RUN: sh -e @file

cp examples/person.ts "$TEMPDIR/types"
cp examples/store.js "$TEMPDIR/endpoints"

cat << EOF > "$TEMPDIR/endpoints/query.js"
export default async function chisel(req: Request) {
    let ret = "";
    const rows = await Chisel.types.Person.rows();
    for await (let row of rows) {
        ret += row.first_name + " " + row.last_name + " " + row.age + " " + row.human + " " + row.height + "\n";
    }
    return new Response(ret);
}
EOF

cd "$TEMPDIR"
$CHISEL apply

# CHECK: Type defined: Person
# CHECK: End point defined: /query
# CHECK: End point defined: /store

$CURL --data '{
    "first_name":"Glauber",
    "last_name":"Costa",
    "age": 666,
    "human": true,
    "height": 10.01
}' -o - $CHISELD_HOST/store

# CHECK: ok

$CURL --data '{
    "first_name":"Jan",
    "last_name":"Plhak",
    "age": -666,
    "human": true,
    "height": 10.02
}' -o - $CHISELD_HOST/store

# CHECK: ok

$CURL -o - $CHISELD_HOST/query

# CHECK: HTTP/1.1 200 OK
# CHECK: Glauber Costa 666 true 10.01
# CHECK: Jan Plhak -666 true 10.02
