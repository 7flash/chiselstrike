# RUN: CURL="@curl" sh -e @file

cat << EOF | $CHISEL type import -
type Person {
  pub: String
  priv: String @pii
}
EOF

# CHECK: Type defined: Person

$CHISEL end-point create ins examples/store.js

# CHECK: End point defined: /ins

$CURL --data '{"pub":"hello", "priv":"world"}' -o - $CHISELD_HOST/ins

# CHECK: ok

cat << EOF | $CHISEL end-point create find -
export default async function chisel(req) {
    let response = "";
    let persons = await Chisel.find_all("Person");
    for await (let f of persons) {
        response += f.pub + " " + f.priv;
        response += " ";
    }
    return new Response(response);
}
EOF

# CHECK: End point defined: /find

$CURL -o - $CHISELD_HOST/find

# CHECK: HTTP/1.1 200 OK
# CHECK: hello world

$CHISEL policy update 'anonymize(@pii)'

$CURL -o - $CHISELD_HOST/find

# CHECK: HTTP/1.1 200 OK
# CHECK: hello xxxxx
